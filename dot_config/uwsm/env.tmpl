# uwsm users should avoid placing environment variables in the hyprland.conf file.
# Instead, use:
#   ~/.config/uwsm/env for theming, xcursor, Nvidia and toolkit variables,
#   ~/.config/uwsm/env-hyprland for HYPR* and AQ_* variables.
#
# The format is export KEY=VAL.


# Cursor settings
export XCURSOR_SIZE=24
export XCURSOR_THEME=Adwaita

# GTK settings
export GDK_BACKEND=wayland,x11
#export GTK_THEME=Adwaita:dark

# Qt settings
export QT_QPA_PLATFORM=wayland;xcb
export QT_QPA_PLATFORMTHEME=hyprqt6engine
#export QT_STYLE_OVERRIDE=Adwaita-Dark
#export QT_WAYLAND_DECORATION=adwaita
#export QT_AUTO_SCREEN_SCALE_FACTOR=1

# SDL settings
export SDL_VIDEODRIVER=wayland,x11

# Clutter settings (used by some GNOME apps)
export CLUTTER_BACKEND=wayland

# XWayland integration
export DISPLAY=:0
export WAYLAND_DISPLAY=wayland-1

# Ensure XWayland apps work properly
export XDG_SESSION_TYPE=wayland
export XDG_CURRENT_DESKTOP=Hyprland

# Java applications XWayland compatibility
export _JAVA_AWT_WM_NONREPARENTING=1

{{- if eq .chezmoi.hostname "galadriel" }}
# AMD environment variables
env = LIBVA_DRIVER_NAME,mesa
{{- end }}

